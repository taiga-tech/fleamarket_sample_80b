= render partial:"users/header"
-# パンくず
  - breadcrumb :likes

.container  
  .wrapper
    .upper          
      %p.between_image
        = link_to "#{current_user.name}さんがいいねした商品一覧", root_path 
.container 
  .index_mypage         
    .content_2  
      - current_user.liked_items.each do |item|  
        .content  
          %h2.user_images  
            - item.images.each do |image|  
              = image_tag image.image.url, class: "item_image" if image.image.present?                     
          %ul.user_info  
            %li.user.created_at 
              = "登録日：#{item.created_at.strftime("%Y年%-m月%-d日")}"  
            %li.user.title 
              = link_to "商品名：#{item.title}", item_path(item) 
            %li.user.price
              = "現在の価格：¥#{item.price}"
            %li.user.leadtime
              = "いいね数：#{item.liked_users.count}個"
    

