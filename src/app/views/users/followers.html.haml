- breadcrumb :followers

.main_followers
  .follow_title 
    フォロワー一覧
  .follow_content 
    %h1.follow.index 
    - @users.each do |user| 
      %h1.self_image 
      - if user.profile.image.present?
        = image_tag user.profile.image.url, class: "follow_image" if user.profile.image.present?
      - else
        = image_tag  "default.png", class: "self_image"
      .Messagefollow
        .follow-message 
          %p.follow_text 
            = link_to "#{user.name}", user_path(user), method: :get 
