.Devise.form
  .Devise__main
    .Devise__header
      ユーザー情報登録
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .field.text-input
        = f.text_field :name, autofocus: true, placeholder: "ニックネーム"
        %span.separator
      .flex
        .field.text-input
          = f.text_field :family_name_kana, placeholder: "ふりがな"
          %span.separator

        .field.text-input
          = f.text_field :first_name_kana, placeholder: "ふりがな"
          %span.separator
      .flex
        .field.text-input
          = f.text_field :family_name, placeholder: "名字"
          %span.separator

        .field.text-input
          = f.text_field :first_name, placeholder: "名前"
          %span.separator

      .field.text-input
        .flex
          .label
            = f.label :birthday do
              生年月日
          .field
            = f.date_field :birthday
            %span.separator

      .field.text-input
        = f.email_field :email, autocomplete: "email", placeholder: "メールアドレス"
        %span.separator
      .field.text-input
        = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード (#{@minimum_password_length}文字以上)"
        %span.separator
      .field.text-input
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード"
        %span.separator
      .actions.form-bottom
        = f.submit "次へ"
      = render "devise/shared/links"
      .signup
        = link_to "他の方法で新規登録", "#"
