.Devise.form
  .Devise__main
    .Devise__header
      住所情報登録
    = form_for @address do |f|
      = render "devise/shared/error_messages", resource: @address
      .title
        送付先氏名
      .flex
        .field.text-input
          = f.text_field :family_name_kana, autofocus: true, placeholder: "ふりがな"
          %span.separator

        .field.text-input
          = f.text_field :first_name_kana, placeholder: "ふりがな"
          %span.separator
      .flex
        .field.text-input
          = f.text_field :family_name, placeholder: "名字"
          %span.separator

        .field.text-input
          = f.text_field :first_name, placeholder: "名前"
          %span.separator
      .field.text-input
        = f.text_field :zipcode, placeholder: "郵便番号"
        %span.separator
      .field.text-input
        = f.text_field :area, placeholder: "都道府県"
        %span.separator
      .field.text-input
        = f.text_field :city, placeholder: "市町村"
        %span.separator
      .field.text-input
        = f.text_field :street, placeholder: "その他(番地など)"
        %span.separator
      .actions.form-bottom
        = f.submit "Sign up"
    = render "devise/shared/links"
