- if user_signed_in?
  - if current_user.already_liked?(item) 
    = button_to "❤️いいね！#{@item.likes.count}", item_like_path(item, current_user.likes.find_by(item_id: @item.id)), method: :delete, remote: true 
  - else 
    = button_to "🖤いいね！#{@item.likes.count}", item_likes_path(item,current_user.likes.build), remote: true