.main
  .main__box
    .main__box--itemBox
      .main__box--itemBox--itemIndex
        .main__box--itemBox--itemIndex--text1-head
          新着投稿商品
          .main__box--textBox--content3--head--bar2
        .main__box--itemBox--itemIndex--text2
        .main__box--itemBox--itemIndex--textItem3
          - @first.each do |item|
            - unless item.stock == 0
              -# 仮クラス。商品登録機能完了後以下コメント外す
              = link_to item_path(item) do
                .itemPickBox
                  .itemPickBox__item-image
                    - item.images.first(1).each do |image|
                      = image_tag image.image.url, height: "100%", width: "100%", class: "item_image" if image.image.present?
                  %ul.item_status
                    %li.item_status__price
                      = "¥#{item.price}"
                    %li.item_status__title
                      = link_to "🤍#{item.liked_users.count}", item_path(item)
            - else
              .itemPickBox
                .itemPickBox__item-image
                  - item.images.first(1).each do |image|
                    -# 画像サイズ(size:)は仮値
                    = image_tag image.image.url, height: "100%", width: "100%", class: "item_image" if image.image.present?
                  %ul.item_status
                    %li.item_status__stock
                      完売しました

    .main__box--itemBox
      .main__box--itemBox--itemIndex--text1-head
        .main__box--itemBox--archive--text1
          カテゴリー
        .main__box--textBox--content3--head--bar2

    .main__box--itemBox
      - @categories.each do |category|
        .category_title
          = category.root.name
        .main__box--itemBox--archive--textItem3
          - category.children.each do |child|
            - child.children.each do |grandchild|
              - grandchild.items.first(4).shuffle.each do |item|
                - unless item.stock == 0
                  -# 仮クラス。商品登録機能完了後以下コメント外す
                  = link_to item_path(item) do
                    .itemPickBox2
                      .itemPickBox2__item-image
                        - item.images.first(1).each do |image|
                          = image_tag image.image.url, height: "100%", width: "100%", class: "item_image" if image.image.present?
                      %ul.item_status2
                        %li.item_status2__price
                          = "¥#{item.price}"
                        %li.item_status2__title
                          = link_to "🤍#{item.liked_users.count}", item_path(item)
                - else
                  .itemPickBox2
                    .itemPickBox2__item-image
                      - item.images.first(1).each do |image|
                        = image_tag image.image.url, height: "100%", width: "100%", class: "item_image" if image.image.present?
                    %ul.item_status2
                      %li.item_status__stock
                        完売しました


